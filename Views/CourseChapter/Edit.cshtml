@model Lms.Models.CourseChapter
@{

    Layout = "AdminLayout";
}
<h1>Edit  Chapter</h1>
<hr />
<div class="col-md-4">
    <form asp-controller="CourseChapter" asp-action="Edit" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Indx" class="control-label"></label>
            <input asp-for="Indx" class="form-control" />
            <span asp-validation-for="Indx" class="text-danger"></span>
        </div>
        <div class="form-group" hidden>
            <label asp-for="courseId" class="control-label"></label>
            <input asp-for="courseId" class="form-control" />
            <span asp-validation-for="courseId" class="text-danger"></span>
        </div>
       

        <div class="form-group mt-2">
            <label asp-for="IsDeleted"></label>
            <input asp-for="IsDeleted" type="checkbox" class="toggle-checkbox" readonly />
        </div>
        <div class="form-group mt-2">
            <label asp-for="Ishidden"></label>
            <input asp-for="Ishidden" type="checkbox" class="toggle-checkbox" readonly />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary mt-3">Create</button>
            <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
        </div>
    </form>
</div>
