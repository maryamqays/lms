@model Lms.Models.CourseChapter
@{

    Layout = "AdminLayout";
}
<h1>@Model.Course.EnTitle</h1>
<hr />

<h4>Create New Chapter</h4>
<hr />
<div class="col">
    <form asp-controller="CourseChapter" asp-action="Create" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Indx" class="control-label"></label>
            <input asp-for="Indx" class="form-control" value="@Context.Request.Query["Indx"]" />
            <span asp-validation-for="Indx" class="text-danger"></span>
        </div>


        <div class="form-group" hidden>
            <label asp-for="courseId" class="control-label"></label>
            <input asp-for="courseId" class="form-control" />
            <span asp-validation-for="courseId" class="text-danger"></span>
        </div>

       
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
