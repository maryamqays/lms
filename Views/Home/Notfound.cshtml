@{
    // Get the current culture
    var culture = System.Threading.Thread.CurrentThread.CurrentCulture.Name;

    // Check if the culture is "ar-SA"
    if (culture == "ar-SA")
    {
        Layout = "_LayoutArabic";
    }
    else
    {
        // Set a default layout for other cultures
        Layout = "_Layout";
    }
}

<main class="main-content  ">
    <div class="content-wrapper  js-content-wrapper">
        <section class="no-page layout-pt-lg layout-pb-lg bg-beige-1">
            <div class="container ">
                <div class="d-flex justify-center">
                    <div class="col-xl-5 col-lg-6">
                        <div class="no-page__content">
                            <h1 class="no-page__main text-dark-1">
                                40<span class="text-purple-1">4</span>
                            </h1>
                            <h2 class="text-35 lh-12 mt-5">
                                @if (culture == "ar-SA")
                                {
                                    @:أوبس! يبدو أنك تائه.
                                }
                                else
                                {
                                    @:Oops! It looks like you're lost.
                                }
                            </h2>
                            <div class="mt-10">
                                @if (culture == "ar-SA")
                                {
                                    @:الصفحة التي تبحث عنها غير متوفرة. حاول البحث مرة أخرى أو استخدم الذهاب إلى.
                                }
                                else
                                {
                                    @:The page you're looking for isn't available. Try to search again or use the go to.
                                }
                            </div>
                            <a href="/" class="button -md -purple-1 text-white mt-20">
                                @if (culture == "ar-SA")
                                {
                                    @:العودة إلى الصفحة الرئيسية
                                }
                                else
                                {
                                    @:Go Back To Homepage
                                }
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</main>
