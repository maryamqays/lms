@{

    Layout = "AdminLayout";
}
<h1>Course Chapters Content</h1>
<hr />
<p>
    <a class="btn btn-primary text-white" asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Ttile
            </th>
            <th>
                Description
            </th>
            <th>
                Indx
            </th>
            <th>
                courseChapter
            </th>
            <th>
                ContentType
            </th>
            <th>
                FilePath
            </th>
            <th>
                Duration
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Title
                </td>
                <td>
                   @Html.Raw( @item.Description)
                </td>
                <td>
                    @item.Indx
                </td>
                <td>
                    @item.courseChapter.Name
                </td>
                <td>
                    @item.ContentType
                </td>
                <td>
                    @item.FilePath
                </td>
                <td>
                    @item.Duration
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this category?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger text-white">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>