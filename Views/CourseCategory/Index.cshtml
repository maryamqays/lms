@model IEnumerable<LMS.Models.CourseCategory>
@{

    Layout = "AdminLayout";
}
<h1>Course Categories</h1>
<hr />

<div class="mb-5">
    <a class="btn btn-primary text-white" asp-action="Create">Create New</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Name (Arabic)
            </th>
            <th>
                Name (English)
            </th>
            <th>
                Description
            </th>
            <th>
                Image
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.ArName
                </td>
                <td>
                    @item.EnName
                </td>
                <td>
                    @Html.Raw(@item.Description)
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Image))
                    {
                        <img src="@item.Image" alt="Category Image" style="max-width: 100px; max-height: 100px;" />
                    }
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this category?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger text-white">Delete</button>
                    </form>


                </td>
            </tr>
        }
    </tbody>
</table>
