@model LMS.Models.CourseCategory
@{

    Layout = "AdminLayout";
}
<h1>Create New Course Category</h1>

<hr />

<div class="row">
    <div class="col">
        <form asp-controller="CourseCategory" asp-action="Create" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="ArName" class="control-label"></label>
                <input asp-for="ArName" class="form-control" />
                <span asp-validation-for="ArName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnName" class="control-label"></label>
                <input asp-for="EnName" class="form-control" />
                <span asp-validation-for="EnName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Image"></label>
                <input type="file" id="uploadBox" name="file" class="form-control" onchange="previewImage(event)" accept="image/*" />
                <img id="imagePreview" class="mb-0" style="max-width: 200px; max-height: 200px;" />

            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary ">Create</button>
                <a asp-action="Index" class="btn btn-secondary text-white">Cancel</a>
            </div>
        </form>
    </div>
</div>

<script>
    function previewImage(event) {
        var input = event.target;
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $('#imagePreview').attr('src', e.target.result);
            };
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>