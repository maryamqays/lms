@model LMS.Models.CourseCategory
@{

    Layout = "AdminLayout";
}
<h1>Edit New Course Category</h1>

<hr />

<div class="row">
    <div class="col">
        <form asp-controller="CourseCategory" asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ArName" class="control-label"></label>
                <input asp-for="ArName" class="form-control" />
                <span asp-validation-for="ArName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnName" class="control-label"></label>
                <input asp-for="EnName" class="form-control" />
                <span asp-validation-for="EnName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Image"></label>
                <input type="text" value="@Model.Image" readonly class="form-control" hidden />
                <input type="hidden" asp-for="Image" /> <!-- Add this line -->
                <input type="file" id="uploadBox" name="file" class="form-control"  accept="image/*" />
            </div>


            <div class="form-group">
                <button type="submit" class="btn btn-primary mt-3">Edit</button>
                <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
            </div>
        </form>
    </div>
</div>

