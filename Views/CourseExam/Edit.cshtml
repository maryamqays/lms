@model LMS.Models.CourseExam

@{
    Layout = "AdminLayout";
}

<h2>Edit Course Exam</h2>

<form asp-controller="CourseExam" asp-action="Edit" method="post" enctype="multipart/form-data">
    <input asp-for="Id" type="hidden" />
    <input asp-for="CourseId" type="hidden" />

    <div class="form-group">
        <label asp-for="Question" class="control-label">Question</label>
        <input asp-for="Question" class="form-control" />
        <span asp-validation-for="Question" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Answer1" class="control-label">Answer 1</label>
        <input asp-for="Answer1" class="form-control" />
        <span asp-validation-for="Answer1" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Answer2" class="control-label">Answer 2</label>
        <input asp-for="Answer2" class="form-control" />
        <span asp-validation-for="Answer2" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Answer3" class="control-label">Answer 3</label>
        <input asp-for="Answer3" class="form-control" />
        <span asp-validation-for="Answer3" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Answer4" class="control-label">Answer 4</label>
        <input asp-for="Answer4" class="form-control" />
        <span asp-validation-for="Answer4" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CorrectAnswer" class="control-label">Correct Answer</label>
        <select asp-for="CorrectAnswer" class="form-control">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
        </select>
        <span asp-validation-for="CorrectAnswer" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Langs" class="control-label">Language</label>
        <select asp-for="Langs" class="form-control">
            <option value="1">Arabic</option>
            <option value="2">English</option>
        </select>
        <span asp-validation-for="Langs" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
